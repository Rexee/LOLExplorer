<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/matchHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:cacheColorHint="#00000000"
        android:choiceMode="singleChoice"
        android:clickable="true"
        android:clipToPadding="true"
        android:fadingEdge="none"
        android:scrollbarStyle="outsideOverlay"
        android:scrollingCache="true"></ListView>

    <FrameLayout android:id="@+id/summonerSummaryViewFrame"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="252dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/summonerIconBackground"
            android:layout_width="fill_parent"
            android:layout_height="252dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/summonerMostPlayedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="70dp"
            android:shadowColor="#ff000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:text="Most played"
            android:textColor="#fff2fad6"
            android:textSize="13sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/mostPlayedListIcons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:layout_marginBottom="2dp"
            android:gravity="center_horizontal"

            android:orientation="horizontal"
            android:weightSum="1">

            <FrameLayout
                android:id="@+id/mostPlayed1"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/mostPlayedChamp1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="#fffad7e7" />

                <TextView
                    android:id="@+id/mostPlayedChampTxt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="999"
                    android:textColor="#fff2fad6"
                    android:textSize="11sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/mostPlayed2"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/mostPlayedChamp2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="#fffad7e7" />

                <TextView
                    android:id="@+id/mostPlayedChampTxt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="t2"
                    android:textColor="#fff2fad6"
                    android:textSize="11sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/mostPlayed3"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/mostPlayedChamp3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="#fffad7e7" />

                <TextView
                    android:id="@+id/mostPlayedChampTxt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="t3"
                    android:textColor="#fff2fad6"
                    android:textSize="11sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/mostPlayed4"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/mostPlayedChamp4"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="#fffad7e7" />

                <TextView
                    android:id="@+id/mostPlayedChampTxt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="t4"
                    android:textColor="#fff2fad6"
                    android:textSize="11sp" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/mostPlayed5"
                android:layout_width="64dp"
                android:layout_height="65dp"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/mostPlayedChamp5"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_horizontal|top"
                    android:background="#fffad7e7" />

                <TextView
                    android:id="@+id/mostPlayedChampTxt5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|bottom"
                    android:shadowColor="#ff000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="1"
                    android:text="t5"
                    android:textColor="#fff2fad6"
                    android:textSize="11sp" />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <View
        android:id="@+id/summonerDataHeaderShadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/summonerSummaryViewFrame"
        android:background="@drawable/shadow_bottom" />

    <TextView
        android:id="@+id/summonerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="38dp"
        android:shadowColor="#ff000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="Summoner Name"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#fff2fad6"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/summonerServer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/summonerName"
        android:layout_alignParentRight="false"
        android:layout_below="@+id/summonerName"
        android:gravity="top"
        android:shadowColor="#ff000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Server"
        android:textColor="#fff2fad6" />

    <TextView
        android:id="@+id/summonerRankedSolo5v5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/summonerName"
        android:layout_below="@+id/summonerServer"
        android:shadowColor="#ff000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/rankedSolo5v5"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#fff2fad6"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/summonerLastTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/summonerName"
        android:layout_below="@+id/summonerRankedSolo5v5"
        android:shadowColor="#ff000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/lastTimePlayed"
        android:textColor="#fff2fad6" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/summonerRankedSolo5v5"
        android:layout_below="@+id/summonerLastTime"
        android:layout_gravity="center"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/summonerIcon"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:background="#fffad7e7"
        android:contentDescription="@string/summonerIcon" />

    <ImageView
        android:id="@+id/summonerIconPlaceholder"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_gravity="left"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/summonerIcon" />

    <Material.FloatingActionButton
        android:id="@+id/fab_Summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha"
        android:visibility="invisible"
        fab:fab_colorNormal="@color/primary"
        fab:fab_colorPressed="@color/primary_pressed"
        fab:fab_colorRipple="@color/ripple" />


</RelativeLayout>