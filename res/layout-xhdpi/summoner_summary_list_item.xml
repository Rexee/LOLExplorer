<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/match_history_row_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/championIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="left|center_vertical"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/queueType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/championIcon"
        android:alpha="0.87"
        android:ellipsize="end"
        android:maxLines="1"
        android:maxWidth="220dp"
        android:text="123456789012345678901234567890"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/kda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/queueType"
        android:layout_below="@+id/queueType"
        android:alpha="0.87"
        android:text="@string/KDA"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/matchDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/queueType"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:alpha="0.87"
        android:text="@string/date"
        android:textColor="#000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/matchDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/championIcon"
        android:layout_alignLeft="@+id/queueType"
        android:alpha="0.54"
        android:gravity="right"
        android:text="@string/duration"
        android:textColor="#000000"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/mh_Item0"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/mh_Item6"
        android:layout_toLeftOf="@+id/mh_Item1"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/mh_Item1"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/mh_Item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/mh_Item2"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/mh_Item2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/mh_Item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/mh_Item3"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/mh_Item3"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/mh_Item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/mh_Item4"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/mh_Item4"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/mh_Item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/mh_Item5"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/mh_Item5"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignTop="@+id/mh_Item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/mh_Item6"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/mh_Item6"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignRight="@+id/matchDate"
        android:layout_below="@+id/matchDate"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="5dp"
        android:background="#50000000" />

</RelativeLayout>
