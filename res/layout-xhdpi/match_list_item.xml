<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/participantChampIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_margin="4dp" />

    <ImageView
        android:id="@+id/spell1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/participantChampIcon"
        android:layout_toRightOf="@+id/participantChampIcon" />

    <ImageView
        android:id="@+id/spell2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/participantChampIcon"
        android:layout_toRightOf="@+id/participantChampIcon" />

    <TextView
        android:id="@+id/participantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/spell1"
        android:alpha="0.87"
        android:text="Summoner Name Name"
        android:textColor="#ff000000"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item0"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/item6"
        android:layout_toLeftOf="@+id/item1"
        android:layout_toStartOf="@+id/item3"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/item1"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/item2"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/item2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/item3"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/item3"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/item4"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/item4"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/item5"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/item5"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignTop="@+id/item6"
        android:layout_marginLeft="2dp"
        android:layout_toLeftOf="@+id/item6"
        android:background="#50000000" />

    <ImageView
        android:id="@+id/item6"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="false"
        android:layout_alignRight="@+id/dmgDealt"
        android:layout_below="@+id/dmgDealt"
        android:layout_gravity="right"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="8dp"
        android:background="#50000000" />

    <TextView
        android:id="@+id/kda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/participantName"
        android:layout_below="@+id/participantName"
        android:alpha="0.87"
        android:text="@string/KDA"
        android:textColor="#ff000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/killParticipation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/participantChampIcon"
        android:layout_alignLeft="@+id/participantName"
        android:alpha="0.87"
        android:text="Kill P"
        android:textColor="#ff000000"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/dmgDealt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/participantName"
        android:layout_marginRight="5dp"
        android:alpha="0.87"
        android:text="Dmg dealt"
        android:textColor="#ff000000"
        android:textSize="10sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="56dp"
        android:background="#FF000000" />
</RelativeLayout>
