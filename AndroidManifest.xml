<?xml version="1.0" encoding="utf-8"?>
<manifest package="tsingularity.lolexplorer"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="tsingularity.lolexplorer.Activities.SummonerActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/app_name">

        </activity>

        <service
            android:name="tsingularity.lolexplorer.REST_Service"
            android:exported="false"></service>

        <activity
            android:name="tsingularity.lolexplorer.Activities.MatchActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/title_activity_main2"></activity>
        <activity
            android:name="tsingularity.lolexplorer.Activities.CurrentGameActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/title_activity_main2"></activity>
        <activity
            android:name="tsingularity.lolexplorer.Activities.SearchActivity"
            android:configChanges="orientation|screenSize|screenLayout"
            android:label="@string/title_activity_search"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
